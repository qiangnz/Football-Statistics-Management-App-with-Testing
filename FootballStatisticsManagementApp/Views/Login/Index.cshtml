@model FootballStatisticsManagementApp.Models.UserLogin;

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Authenticate" asp-controller="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="username" for="exampleInputUsername">Username</label>
        <input asp-for="username" type="text" class="form-control" id="exampleInputUsername" aria-describedby="usernameHelp" name="username" />
        <span class="text-danger" asp-validation-for="username"></span>
    </div>
    <div class="form-group">
        <label asp-for="password" for="exampleInputPassword">Password</label>
        <input asp-for="password" type="password" class="form-control" id="exampleInputPassword" name="password" />
        <span class="text-danger" asp-validation-for="password"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

