@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://cdn.shoot.co.uk/wp-content/uploads/2015/07/ball-pitch-banner.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color: mintcream">
                    Manage your team with ease 
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color: blue">
                    Explore how Football Management App allows you to build and track your stats.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/443229.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color: white">
                    Sponsored by..    
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Application uses</h2>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-body"
                 style="color: dodgerblue; text-align: center; margin-bottom: 0"
                 size="20">
                Know how well your team is doing
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <p class="panel-body"
               style="color: dodgerblue; text-align: center; margin-bottom: 0"
               size="20">
                Understand the Opposition
            </p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <p class="panel-body"
               style="color: dodgerblue; text-align: center; margin-bottom: 0"
               size="20">
                Know your stats
            </p>
        </div>
    </div>
    <div class="col-md-12">
        <h2>Realtime Statistics</h2>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">Top Players</div>
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Team</th>
                        <th>Goals</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < ViewBag.topPlayers.Count; i++)
                    {
                        var stat = ViewBag.topPlayers[i];
                        var playerName = stat.Item1.Name;
                        var teamName = stat.Item2.Name;
                        var totalGoals = stat.Item3;
                        <tr>
                            <td>1</td>
                            <td>@playerName</td>
                            <td>@teamName</td>
                            <td>@totalGoals</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">Top Teams</div>
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Goals</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < ViewBag.topTeams.Count; i++)
                    {
                        var stat = ViewBag.topTeams[i];
                        var teamName = stat.Item1.Name;
                        var totalGoals = stat.Item2;
                        <tr>
                            <td>1</td>
                            <td>@teamName</td>
                            <td>@totalGoals</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>