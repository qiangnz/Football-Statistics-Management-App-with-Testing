@model IEnumerable<FootballStatisticsManagementApp.Models.Stats>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Stats" asp-action="Index">
    <p>
        Name: <input type="text" name="SearchParam" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @if (ViewBag.sortBy == "goals_asc")
                {
                    <a href="/Stats?sortParam=goals_desc">@Html.DisplayNameFor(model => model.Goals)</a>
                }
                else
                {
                    <a href="/Stats?sortParam=goals_asc">@Html.DisplayNameFor(model => model.Goals)</a>
                }
            </th>
            <th>
                @if (ViewBag.sortBy == "assists_asc")
                {
                    <a href="/Stats?sortParam=assists_desc">@Html.DisplayNameFor(model => model.Assists)</a>
                }
                else
                {
                    <a href="/Stats?sortParam=assists_asc">@Html.DisplayNameFor(model => model.Assists)</a>
                }
            </th>
            <th>
                @if (ViewBag.sortBy == "saves_asc")
                {
                    <a href="/Stats?sortParam=saves_desc">@Html.DisplayNameFor(model => model.Saves)</a>
                }
                else
                {
                    <a href="/Stats?sortParam=saves_asc">@Html.DisplayNameFor(model => model.Saves)</a>
                }
            </th>
            <th>
                @if (ViewBag.sortBy == "name_asc")
                {
                    <a href="/Stats?sortParam=name_desc">@Html.DisplayNameFor(model => model.Player)</a>
                }
                else
                {
                    <a href="/Stats?sortParam=name_asc">@Html.DisplayNameFor(model => model.Player)</a>
                }
            </th>
            <th>
                @if (ViewBag.sortBy == "date_asc")
                {
                    <a href="/Stats?sortParam=date_desc">@Html.DisplayNameFor(model => model.Match)</a>
                }
                else
                {
                    <a href="/Stats?sortParam=date_asc">@Html.DisplayNameFor(model => model.Match)</a>
                }
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Goals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assists)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saves)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Match.Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StatsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StatsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StatsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
